<% obj.each do |recipe| %>
  <div class="row">
    <div class="col-md-2">
      <section class="chef_info center">
        <%= gravatar_for(recipe.chef, size: 120) %>
      </section>
    </div>
    <div class="col-md-8 well">
      <h4><%= link_to recipe.name, recipe_path(recipe) %></h4>
      <p><%= truncate(recipe.description, length: 150) %></p>
      <% if recipe.ingredients.any? %>
        <p>Ingredients: <%= render recipe.ingredients %></p>
      <% end %>
      <p>
        <span class="quiet"><small>Created <%= time_ago_in_words(recipe.created_at) %> ago by <%= recipe.chef.chefname.capitalize %>
                                                           <%= pluralize(recipe.comments.count, 'Comment') %></small></span>
      </p>
      <% if logged_in? && (current_chef == recipe.chef || current_chef.admin?) %>
        <div class="recipe-actions">
          <%= link_to "", edit_recipe_path(recipe), class: "fa fa-pencil faa-horizontal animated-hover fa-2x", style: "color:#FFB841;" %>&nbsp;&nbsp;
          <%= link_to "", recipe_path(recipe), method: :delete,
                                        data: { confirm: "Are you sure you want to delete this recipe?" },
                                        class: "fa fa-trash faa-tada animated-hover fa-2x trash", :style => "color: red;" %>
        </div>
      <% end %>
      <hr>
      <div class="row">
        <div class="pull-right liking">
          <%= link_to like_recipe_path(recipe, like: true), method: :post do %>
            <i class="fa fa-thumbs-up fa-2x faa-vertical animated-hover"></i>
          <% end %> <span class="badge white text-success"><%= recipe.thumbs_up_total %></span>&nbsp;&nbsp;
          <%= link_to like_recipe_path(recipe, like: false), method: :post do %>
            <i class="fa fa-thumbs-down fa-2x faa-vertical animated-hover"></i>
          <% end %> <span class="badge white text-danger"><%= recipe.thumbs_down_total %></span>
        </div>
      </div>
    </div>
    <div class="col-md-2">
      <%= image_tag(recipe.image.url, size: "150x100") if recipe.image? %>
    </div>
  </div>
<% end %>
