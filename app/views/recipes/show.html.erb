
<!--Section: Blog v.4-->
<section class="section section-blog-fw">

    <hr>

    <!--Second row-->
    <div class="row">
        <div class="col-md-12">
            <!--Featured image-->
            <div class="view overlay hm-white-slight">
                <img src="https://mdbootstrap.com/img/Photos/Slides/img%20(54).jpg">
                <a>
                    <div class="mask "></div>
                </a>
            </div>

            <!--Post data-->
            <div class="jumbotron">
                <h4><a><%= @recipe.name %></a></h4>
                <p>Created by <a><%= @recipe.chef.chefname.upcase! %></a>, <%= time_ago_in_words(@recipe.created_at) %></p>

                <!--Social shares-->
                <div class="social-counters ">



                </div>
                <!--/.Social shares-->

            </div>
            <!--/Post data-->

            <!--Excerpt-->
            <div class="excerpt">
                <p>
                  <%= @recipe.description %>
                </p>

            </div>
        </div>
    </div>
    <!--/Second row-->

    <hr>

</section>
<!--/Section: Blog v.4-->
