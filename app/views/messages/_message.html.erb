<%#= will_paginate message %>
<!--Main wrapper-->
<div class="comments-list text-left message">

    <!--First row-->
    <div class="row">
        <!--Image column-->
        <div class="col-sm-2 col-12">
            <%= gravatar_for(message.chef, size: 150) %>
        </div>
        <!--/.Image column-->
        <!--Content column-->
        <div class="col-sm-10 col-12">
            <a><h3 class="user-name"><%= message.chef.chefname.capitalize %></h3></a>
            <div class="card-data">
                <ul>
                    <li class="comment-date"><i class="fa fa-clock-o faa-tada animated"></i>
                      <small><em>Created <%= time_ago_in_words(message.created_at) %> ago</em></small>
                    </li>
                </ul>
            </div>
            <span class="comment-text content">
              <%= message.content %>
            </span>
        </div><!--/.Content column-->
    </div><!--/.First row-->
</div><!--/.Main wrapper-->
