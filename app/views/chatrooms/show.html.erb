<%= render 'shared/page_title', title: "ChefChat" %>

<div class="container">
  <div class="messages" id="messages">
    <%= render @messages %>
  </div>
    <br>
  <!--Section: Leave a reply (Logged In User)-->
  <section>

      <!--Leave a reply form-->
      <div class="reply-form">
        <div class="center">
          <%= link_to gravatar_for(@chef), chef_path(@chef) %>
        </div><br>
          <h1 class="section-heading">Leave a reply <i class="fa fa-pencil faa-horizontal animated" style="color: #FFB841;"></i></h1>

          <!--Third row-->

          <%= form_for(@message, remote: true, :html => {class: "form-horizontal", role: "form"}) do |f| %>
            <div class="row">
                <!--Image column-->
                <!--/.Image column-->

                <!--Content column-->
                  <div class="col-sm-10 col-12">
                    <div class="md-form">
                        <%= f.text_area :content, data: { behavior: "room_speaker" }, class: "md-textarea" %>
                    </div>
                  </div>
                  <div class="col-md-4 danger-block">
                      <%= f.button "Send", placeholder: "Say something", class: "btn btn-danger btn-block", data: { send: "message" } %>
                  </div>
                  <!--/.Content column-->
            </div>
          <% end %>
          <!--/.Third row-->
      </div>
      <!--/.Leave a reply form-->
  </section>
  <!--/Section: Leave a reply (Logged In User)-->
</div>
